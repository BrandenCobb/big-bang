        substitution:
          name: alertmanager-hostname
          pattern: alerts.${hostname}
          values:
          - marker: ${hostname}
            ref: '#/definitions/io.k8s.cli.setters.hostname'
    io.k8s.cli.substitutions.prometheus-hostname:
      x-k8s-cli:
        substitution:
